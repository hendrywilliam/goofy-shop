generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Space {
  id                String    @id @default(auto()) @map(name: "_id") @db.ObjectId
  //obtained id from auth, no need to add new collections.
  authorId          String    @map("author_id")
  name              String
  city              City      @relation(fields: [cityId], references: [id])
  cityId            String    @db.ObjectId @map(name: "city_id")
  description       String
  numberRooms       Int?      @map(name: "number_rooms") @default(0)
  numberBathrooms   Int?      @map(name: "number_bathrooms") @default(0)
  maxGuest          Int?      @map(name: "max_guest") @default(0)
  price             Int?      @map(name: "price_per_night") @default(0)
  longitude         String?
  latitude          String?
  reviews           Review[]
  amenity           Amenity[]
  createdAt         DateTime  @default(now()) @map(name: "created_at")
  updatedAt         DateTime  @default(now()) @map(name: "updated_at")

  @@map(name: "spaces")
}

model Review {
  id        String    @id @default(auto()) @map(name: "_id") @db.ObjectId
  //obtained from Auth clerk
  userId    String    @db.ObjectId @map(name: "user_id")
  space     Space     @relation(fields: [spaceId], references: [id])
  spaceId   String    @db.ObjectId @map(name: "place_id")
  content   String    
  stars     Int       @default(5)
  createdAt DateTime  @default(now()) @map(name: "created_at")
  updatedAt DateTime  @default(now()) @map(name: "updated_at")

  @@map(name: "reviews")
}

model Amenity {
  id          String    @id @default(auto()) @map(name: "_id") @db.ObjectId
  name        String
  space       Space     @relation(fields: [spaceId], references: [id])
  spaceId     String    @db.ObjectId
  createdAt   DateTime  @default(now()) @map(name:"created_at")
  updatedAt   DateTime  @default(now()) @map(name:"updated_at")

  @@map(name: "amenities")
}

model City {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  space       Space[]
  createdAt   DateTime  @default(now()) @map(name: "created_at")
  updatedAt   DateTime  @default(now()) @map(name: "updated_at")

  @@map(name: "cities")
}
